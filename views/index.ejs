<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>To Do List</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <form action="/create" method="post">
      <fieldset class="mb-3 bg-black">
        <div class="m-3 bg-black">
          <input type="text" class="form-control text-center" name="task" id="task" placeholder="Insira uma task">
          <button type="submit" class="btn btn-primary mt-3">Adicionar</button>
        </div>
      </fieldset>
    </form>

    <% if (taskList < 1){ %>
      <h1>Nenhuma task cadastrada</h1>
      <% } else{ %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#ID</th>
              <th scope="col">Task</th>
              <th scope="col">Data</th>
              <th scope="col">Opções</th>
            </tr>
          </thead>
          <tbody>
            <% taskList.forEach((task) => { %>
              <tr>
                <td><%= task.id %></td>
                <td><%= task.task %></td>
                <td><%= task.date.toLocaleDateString('pt-BR') %></td>
                <td>
                  <button class="btn btn-outline-danger">Deletar</button>
                  <button class="btn btn-outline-warning">Editar</button>
                </td>
              </tr>
              <% }) }%>
          </tbody>
        </table>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>